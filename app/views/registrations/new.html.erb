 
<%= form_for(:registrations, url: sign_in_path) do |f| %>
<div class="container">
	<div class="caption">
		<h1>Registration of new user</h1>
	</div>
	<div class="form-group">
	    <%= f.label :name, "Name" %>
	    <%= f.text_field :name %>
	</div>
	<div class="form-group">
	    <%= f.label :last_name, "Last Name" %>
	    <%= f.text_field :last_name %>
	</div>
	<div class="form-group">
	    <%= f.label :email %>
	    <%= f.text_field :email %>
	</div>
	<div class="form-group">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
  	</div>
	<div class="form-group">
	    <%= f.label :password, "Password" %>
	    <% if @minimum_password_length %>
	        <em>(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
	    <% end %><br/>
	    <%= f.password_field :password, autocomplete: "off" %>
	</div>
	<div class="btn-group btn-lg">
		<button id="Create" type="submit" class="btn btn-default btn-lg" role="button"> <%= link_to 'Create', log_in_path %></button>
    	<button id="Back" type="submit" class="btn btn-default btn-lg" role="button"> <%= link_to 'Back', log_in_path %></button> 
	</div>
</div>
	
<% end %>
